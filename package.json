{
  "name": "secure-military-chat",
  "version": "1.0.0",
  "description": "Secure military-themed chat application with blockchain auth",
  "main": "server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"nodemon server/server.js\" \"cd client && npm start\"",
    "server": "nodemon server/server.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install",
    "seed": "node server/seedData.js"
  },
  "keywords": ["chat", "military", "secure", "blockchain"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "socket.io": "^4.7.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "crypto-js": "^4.1.1",
    "ethers": "^6.7.1",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^6.10.0"
  },
  "blockchain": {
    "contractAddress": "Will be set after deployment",
    "network": "localhost",
    "chainId": 1337
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1"
  }
}
